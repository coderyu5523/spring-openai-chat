<!DOCTYPE html>
<html>
<head>
    <title>AI Chatbot Example</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.1.4/sockjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        var stompClient = null;

        function connect() {
            var socket = new SockJS('/chat-websocket');
            stompClient = Stomp.over(socket);
            stompClient.connect({}, function(frame) {
                console.log('Connected: ' + frame);
                stompClient.subscribe('/user/topic/messages', function(response) {
                    showMessage(JSON.parse(response.body));
                });
            });
        }

        function sendMessage() {
            var messageContent = $('#message').val();
            var username = $('#username').val();
            var chatMessage = {
                content: messageContent,
                sender: username
            };
            stompClient.send('/app/chat.sendMessage', {}, JSON.stringify(chatMessage));
            $('#message').val('');
        }

        function showMessage(message) {
            var messageStr = message.sender + ': ' + message.content + '\n';
            $('#chatArea').append(messageStr);
        }

        $(function () {
            $('form').on('submit', function (e) {
                e.preventDefault();
            });
            $('#connectBtn').click(function() {
                connect();
            });
            $('#sendBtn').click(function() {
                sendMessage();
            });
        });
    </script>
</head>
<body>
<div>
    <label for="username">Username:</label>
    <input type="text" id="username"/>
    <button id="connectBtn">Connect</button>
</div>
<br/>
<div id="chatArea" style="height: 300px; overflow-y: scroll;"></div>
<br/>
<div>
    <textarea id="message" rows="3" cols="40"></textarea>
    <br/>
    <button id="sendBtn">Send</button>
</div>
</body>
</html>
